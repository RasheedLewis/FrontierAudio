# Copy this file to terraform.tfvars and customize the values.

aws_region         = "us-east-2"
aws_account_id     = "123456789012"
resource_prefix    = "frontier-audio-dev"
s3_bucket_name     = "frontier-audio-dev-transcripts"
kms_alias_name     = "frontier-audio-transcripts"

archive_after_days = 30
delete_after_days  = 365
archive_storage_class = "DEEP_ARCHIVE"

app_principal_type        = "AWS"
app_principal_identifiers = ["arn:aws:iam::123456789012:role/frontier-audio-dev-app"]

create_indexer_role            = true
indexer_dynamodb_table_arns    = ["arn:aws:dynamodb:us-west-2:123456789012:table/frontier-audio-transcripts"]
indexer_opensearch_index_arns  = ["arn:aws:es:us-west-2:123456789012:domain/frontier-audio-search/*"]

# Uncomment if you want a VPC endpoint for S3
# vpc_id                     = "vpc-0abc123456789def0"
# s3_endpoint_route_table_ids = ["rtb-0123456789abcdef0"]

tags = {
  Environment = "dev"
  Owner       = "frontier-audio"
}

